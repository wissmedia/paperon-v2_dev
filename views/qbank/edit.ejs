<!DOCTYPE html>
<html lang="en">
<!-- HEAD PARTIALS -->
<%- include('../partials/head.ejs') %>

  <body>
    <!-- NAV PARTIALS -->
    <%- include('../partials/nav.ejs') %>
      <div class="container">
        <div class="row-content">
          <form action="/pertanyaan/<%= question._id %>" method="POST">
            <input type="hidden" name="_method" value="PUT">
            <div class="content fadeInKiri">
              <div class="line"></div>
              <div class="bungkus-content">
                <label for="selectType">Edit Tipe Jawaban : </label>
                <select name="selectType" id="selectType" class="dropdown">
                  <% if(options.length> 0){ %>
                    <% options.forEach(option=> { %>
                      <option value="<%= option.value %>" <%- helper.select(option.value, option.text) %>  >
                        <%= option.text %>
                      </option>
                      <% }) %>
                        <% }else{ %>
                          <option value="">Tidak ada data</option>
                          <% } %>
                </select>
              </div>
              <div class="bungkus-content edit">
                <label for="body">Edit Pertanyaan :</label>
                <input type="text" name="body" id="body" class="text" value="<%= question.body %>">
              </div>
              <center>
                <button type="submit" class="tombol-md tmb-utama bunder">Simpan</button>
              </center>
            </div>
          </form>
        </div>
      </div>

      <!-- MODAL AUTH -->
      <%- include('../partials/modal-auth.ejs') %>
        <!-- FOOTER PARTIALS -->
        <%- include('../partials/footer.ejs') %>
          <!-- SCRIPT PARTIALS -->
          <%- include('../partials/script.ejs') %>

  </body>

</html>