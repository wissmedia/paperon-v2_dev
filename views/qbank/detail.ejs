<!DOCTYPE html>
<html lang="en">
<!-- HEAD PARTIALS -->
<%- include('../partials/head.ejs') %>

  <body>
    <!-- NAV PARTIALS -->
    <%- include('../partials/nav.ejs') %>
      <div class="container">
        <div class="row-content">
          <% if (question) { %>
            <div class="content fadeInKiri">
              <div class="line"></div>
              <div class="bungkus-content edit">
                <!-- Body -->
                <h3>
                  <%= question.body %>
                </h3>
                <!-- Tipe -->
                <h4>
                  Tipe : <%= helper.typeChange(question.tipe) %>
                </h4>
                <!-- useWajib -->
                <% if (question.useWajib=='on' ) { %>
                  <p><strong>Wajib Dijawab</strong></p>
                  <% } %>
                    <!-- Created DateTime -->
                    <p>
                      Created : <%= helper.formatDate(question.createdAt, 'DD MMMM YYYY, h:mm:ss a' ) %>
                    </p>
                    <!-- Last Update DateTime -->
                    <p>Last Updated : <%= helper.formatDate(question.updatedAt, 'DD MMMM YYYY, h:mm:ss a' ) %>
                    </p>
              </div>
            </div>
            <div class="content fadeInKiri">
              <div class="line"></div>
              <div class="bungkus-content edit">
                <p>* Pratinjau pertanyaan</p>
                <%- helper.typeRender(question._id, question.tipe, question.body, question.opsiy, question.opsix,
                  question.sl, question.label, question.useWajib) %>
              </div>
            </div>
            <center class="fadeInBawah">
              <a href="/pertanyaan/edit/<%= question._id %>"><button class="tombol-md tmb-utama bunder"><i
                    class="fas fa-pencil-alt"></i> Edit</button></a>
            </center>
            <% } else { %>
              <div class="content fadeInAtas">
                <div class="line"></div>
                <div class="bungkus-content edit">
                  <h3>Tidak Ada Data</h3>
                </div>
              </div>
              <% } %>
        </div>
      </div>

      <!-- MODAL AUTH -->
      <%- include('../partials/modal-auth.ejs') %>
        <!-- FOOTER PARTIALS -->
        <%- include('../partials/footer.ejs') %>
          <!-- SCRIPT PARTIALS -->
          <%- include('../partials/script.ejs') %>
            <script src="/js/quesioner-view.js"></script>

  </body>

</html>