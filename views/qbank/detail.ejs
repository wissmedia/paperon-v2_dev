<!DOCTYPE html>
<html lang="en">
<!-- HEAD PARTIALS -->
<%- include('../partials/head.ejs') %>

  <body>
    <!-- NAV PARTIALS -->
    <%- include('../partials/nav.ejs') %>
      <div class="container">
        <div class="row-content">
          <% if (question) { %>
            <div class="content fadeInKiri">
              <div class="line"></div>
              <div class="bungkus-content edit">
                <h1>
                  <%= question.body %>
                </h1>
                <h3>
                  Tipe : <%= helper.typeChange(question.selectType) %>
                </h3>
                <p>Created : <%= helper.formatDate(question.createdAt, 'DD MMMM YYYY, h:mm:ss a' ) %>
                </p>
                <p>Last Updated : <%= helper.formatDate(question.updatedAt, 'DD MMMM YYYY, h:mm:ss a' ) %>
                </p>
              </div>
            </div>
            <% } else { %>
              <div class="content fadeInAtas">
                <div class="line"></div>
                <div class="bungkus-content edit">
                  <h3>Tidak Ada Data</h3>
                </div>
              </div>
              <% } %>
        </div>
      </div>

      <!-- MODAL AUTH -->
      <%- include('../partials/modal-auth.ejs') %>
        <!-- FOOTER PARTIALS -->
        <%- include('../partials/footer.ejs') %>
          <!-- SCRIPT PARTIALS -->
          <%- include('../partials/script.ejs') %>

  </body>

</html>